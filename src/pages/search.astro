---
/**
 * Search Page - Dedicated full-page search experience
 * 
 * Provides a fallback for users who prefer a dedicated search page
 * or have JavaScript disabled (shows link to recipes).
 */

import SiteLayout from '../layouts/SiteLayout.astro';
import { siteConfig } from '../config/site';
import { ctaPillClasses } from '../components/ui/classes';

const searchEnabled = siteConfig.features.search.enabled;
---

<SiteLayout title="Search">
  <div class="search-page" data-pagefind-ignore>
    <header class="page-header">
      <h1>Search Recipes</h1>
      <p class="subtitle">Find recipes by title, ingredients, or description.</p>
    </header>

    {searchEnabled ? (
      <div class="search-content">
        <p class="search-hint">
          Press <kbd>âŒ˜</kbd><kbd>K</kbd> (or <kbd>Ctrl</kbd><kbd>K</kbd>) to open search,
          or use the search button in the header.
        </p>
        <button 
          type="button" 
          class={ctaPillClasses({ size: 'lg' })}
          data-search-trigger
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            aria-hidden="true"
          >
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.3-4.3"></path>
          </svg>
          Open Search
        </button>
      </div>
    ) : (
      <div class="search-disabled">
        <p>Search is currently disabled.</p>
        <a href="/recipes" class={ctaPillClasses({ size: 'md' })}>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            aria-hidden="true"
          >
            <path d="M3 2v7c0 1.1.9 2 2 2h4a2 2 0 0 0 2-2V2M7 2v20M21 15V2a5 5 0 0 0-5 5v6c0 1.1.9 2 2 2h3zm0 0v7"></path>
          </svg>
          Browse all recipes
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            aria-hidden="true"
          >
            <path d="M5 12h14M12 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    )}
  </div>
</SiteLayout>

<style>
  .search-page {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
  }

  .page-header {
    margin-bottom: 2rem;
  }

  .subtitle {
    color: var(--muted);
    margin-top: 0.5rem;
  }

  .search-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    padding: 2rem;
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-xl);
  }

  .search-hint {
    color: var(--muted);
    font-size: 0.95rem;
  }

  kbd {
    display: inline-block;
    padding: 0.2rem 0.5rem;
    font-size: 0.8rem;
    font-family: system-ui, sans-serif;
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: 0.25rem;
    color: var(--text);
    margin: 0 0.1rem;
  }

  .search-disabled {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    padding: 2rem;
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-xl);
  }

  .search-disabled p {
    color: var(--muted);
    margin: 0;
  }
</style>



