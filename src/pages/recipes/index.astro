---
import SiteLayout from '../../layouts/SiteLayout.astro';
import GlassCard from '../../components/ui/GlassCard.astro';
---

<SiteLayout title="Recipes">
  <div class="page-content">
    <header class="page-header">
      <h1>Recipes</h1>
      <p class="subtitle">Only the keepers. No filler.</p>
    </header>

    <section class="recipes-grid">
      <!-- Placeholder cards - will be replaced with actual recipes from content collections -->
      <GlassCard as="article" hover class="recipe-card">
        <div class="recipe-meta">Coming Soon</div>
        <h2 class="recipe-title">Recipe Collection</h2>
        <p class="recipe-desc">
          The recipe collection is being prepared. Check back soon for curated, 
          no-nonsense recipes.
        </p>
      </GlassCard>

      <GlassCard as="article" hover class="recipe-card">
        <div class="recipe-meta">Placeholder</div>
        <h2 class="recipe-title">Sample Recipe</h2>
        <p class="recipe-desc">
          Each recipe will include scaling, unit conversion, and a cooking mode 
          for distraction-free cooking.
        </p>
      </GlassCard>

      <GlassCard as="article" hover class="recipe-card">
        <div class="recipe-meta">Template</div>
        <h2 class="recipe-title">Your Recipe Here</h2>
        <p class="recipe-desc">
          Add your own recipes using Markdown files with structured frontmatter.
        </p>
      </GlassCard>
    </section>
  </div>
</SiteLayout>

<style>
  .page-content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .page-header {
    padding: 1rem 0 0.5rem;
  }

  .subtitle {
    color: var(--muted);
    font-size: 1.125rem;
    margin-top: 0.5rem;
  }

  .recipes-grid {
    display: grid;
    gap: 1.5rem;
  }

  @media (min-width: 640px) {
    .recipes-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .recipes-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .recipe-card {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .recipe-meta {
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--accent);
  }

  .recipe-title {
    font-size: 1.25rem;
    color: var(--text);
    line-height: 1.3;
  }

  .recipe-desc {
    color: var(--muted);
    font-size: 0.9rem;
    line-height: 1.6;
  }
</style>
