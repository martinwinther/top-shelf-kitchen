---
import SiteLayout from '../../layouts/SiteLayout.astro';

export function getStaticPaths() {
  return [{ params: { slug: 'test' } }];
}

const { slug } = Astro.params;
---

<SiteLayout title={`Recipe: ${slug} - Top Shelf Kitchen`}>
  <main class="min-h-screen p-8 max-w-4xl mx-auto">
    <h1 class="mb-4">Recipe: {slug}</h1>
    <p class="text-[color:var(--muted)] mb-8">
      This is a placeholder for the recipe detail page. The slug is: <strong class="text-[color:var(--text)]">{slug}</strong>
    </p>
    <nav class="flex gap-4">
      <a href="/recipes">‚Üê All Recipes</a>
      <span class="text-[color:var(--muted)]">|</span>
      <a href="/">Home</a>
    </nav>
  </main>
</SiteLayout>
