---
import SiteLayout from '../layouts/SiteLayout.astro';
import { siteConfig } from '../config/site';
import { getPublishedRecipes, getTotalMinutes, pickFeatured, getRecipeSlug } from '../lib/recipes';
import RecipeCard from '../components/recipes/RecipeCard.astro';
import CategoryTile from '../components/home/CategoryTile.astro';
import RecipeRail from '../components/home/RecipeRail.astro';
import NewsletterSignup from '../components/newsletter/NewsletterSignup.astro';
import { ctaPillClasses } from '../components/ui/classes';

const allRecipes = await getPublishedRecipes();

// Featured recipes
const featuredRecipes = pickFeatured(allRecipes, siteConfig.content.featuredRecipeSlugs);

// Category counts
const categories = ['breakfast', 'lunch', 'dinner', 'dessert', 'snacks'] as const;
const categoryCounts = categories.map((cat) => ({
  label: cat.charAt(0).toUpperCase() + cat.slice(1),
  href: `/recipes?category=${cat}`,
  count: allRecipes.filter((r) => r.data.category === cat).length,
}));

// Quick recipes (lowest total minutes, top 6)
const quickRecipes = [...allRecipes]
  .sort((a, b) => getTotalMinutes(a) - getTotalMinutes(b))
  .slice(0, 6)
  .map((recipe) => ({
    title: recipe.data.title,
    description: recipe.data.description,
    href: `/recipes/${getRecipeSlug(recipe)}`,
    category: recipe.data.category,
    cuisine: recipe.data.cuisine,
    prepMinutes: recipe.data.times.prepMinutes,
    cookMinutes: recipe.data.times.cookMinutes,
    servingsDefault: recipe.data.servingsDefault,
    image: recipe.data.image,
    imageAlt: recipe.data.imageAlt,
  }));

// Latest recipes (top 6 by publishedAt, newest first)
const latestRecipes = [...allRecipes]
  .sort((a, b) => {
    const dateA = a.data.publishedAt?.getTime() ?? 0;
    const dateB = b.data.publishedAt?.getTime() ?? 0;
    return dateB - dateA; // newest first
  })
  .slice(0, 6)
  .map((recipe) => ({
    title: recipe.data.title,
    description: recipe.data.description,
    href: `/recipes/${getRecipeSlug(recipe)}`,
    category: recipe.data.category,
    cuisine: recipe.data.cuisine,
    prepMinutes: recipe.data.times.prepMinutes,
    cookMinutes: recipe.data.times.cookMinutes,
    servingsDefault: recipe.data.servingsDefault,
    image: recipe.data.image,
    imageAlt: recipe.data.imageAlt,
  }));
---

<SiteLayout>
  <div class="home-content" data-pagefind-ignore>
    <!-- Hero -->
    <header class="home-hero">
      <h1 class="hero-title">{siteConfig.site.name}</h1>
      <p class="hero-tagline">{siteConfig.site.tagline}</p>
      <p class="hero-value-prop">
        A dark, heavy-glass, minimalist recipe site for people tired of fluffy food-blog filler.
        Every recipe is a banger.
      </p>
    </header>

    <!-- Featured Recipes -->
    {featuredRecipes.length > 0 && (
      <section class="home-section">
        <h2 class="section-title">Featured</h2>
        <div class="featured-grid">
          {featuredRecipes.map((recipe) => (
            <RecipeCard
              title={recipe.data.title}
              description={recipe.data.description}
              href={`/recipes/${getRecipeSlug(recipe)}`}
              category={recipe.data.category}
              cuisine={recipe.data.cuisine}
              prepMinutes={recipe.data.times.prepMinutes}
              cookMinutes={recipe.data.times.cookMinutes}
              servingsDefault={recipe.data.servingsDefault}
              image={recipe.data.image}
              imageAlt={recipe.data.imageAlt}
            />
          ))}
        </div>
      </section>
    )}

    <!-- Category Tiles -->
    <section class="home-section">
      <h2 class="section-title">Browse by Category</h2>
      <div class="category-grid">
        {categoryCounts.map((category) => (
          <CategoryTile
            label={category.label}
            href={category.href}
            count={category.count}
          />
        ))}
      </div>
    </section>

    <!-- Quick Recipes Rail -->
    {quickRecipes.length > 0 && (
      <RecipeRail
        title="Quick"
        recipes={quickRecipes}
        viewAllHref="/recipes?sort=quickest"
      />
    )}

    <!-- Latest Recipes Rail -->
    {latestRecipes.length > 0 && (
      <RecipeRail
        title="Latest"
        recipes={latestRecipes}
        viewAllHref="/recipes"
      />
    )}

    <!-- Newsletter Signup -->
    <NewsletterSignup />

    <!-- Footer CTA -->
    <section class="home-section home-cta">
      <a href="/recipes" class={ctaPillClasses({ size: 'lg' })}>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="18"
          height="18"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          aria-hidden="true"
        >
          <path d="M3 2v7c0 1.1.9 2 2 2h4a2 2 0 0 0 2-2V2M7 2v20M21 15V2a5 5 0 0 0-5 5v6c0 1.1.9 2 2 2h3zm0 0v7"></path>
        </svg>
        Browse all recipes
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          aria-hidden="true"
        >
          <path d="M5 12h14M12 5l7 7-7 7"></path>
        </svg>
      </a>
    </section>
  </div>
</SiteLayout>

<style>
  .home-content {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .home-hero {
    text-align: center;
    padding: 3rem 0 2rem;
    max-width: 720px;
    margin: 0 auto;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 600;
    margin: 0 0 0.75rem 0;
    color: var(--text);
  }

  .hero-tagline {
    font-size: 1.5rem;
    color: var(--muted);
    font-style: italic;
    margin: 0 0 1.5rem 0;
  }

  .hero-value-prop {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--text);
    margin: 0;
  }

  .home-section {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .section-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0;
    color: var(--text);
  }

  .featured-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 640px) {
    .featured-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .featured-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .category-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  @media (min-width: 640px) {
    .category-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .category-grid {
      grid-template-columns: repeat(5, 1fr);
    }
  }

  .home-cta {
    text-align: center;
    padding: 2rem 0;
  }

  @media (min-width: 768px) {
    .hero-title {
      font-size: 4rem;
    }

    .hero-tagline {
      font-size: 1.75rem;
    }
  }
</style>
