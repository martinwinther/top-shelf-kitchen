---
import SiteLayout from '../layouts/SiteLayout.astro';
import { Counter } from '../components/react/Counter';
---

<SiteLayout>
  <main class="min-h-screen p-8 max-w-4xl mx-auto">
    <h1 class="mb-4">Top Shelf Kitchen</h1>
    <p class="text-[color:var(--muted)] mb-12 text-lg">
      A dark, heavy-glass, minimalist recipe site for people tired of fluffy food-blog filler.
    </p>

    <section>
      <h2 class="mb-6">React Island Demo</h2>
      <!-- Glass card container -->
      <div
        class="bg-[color:var(--glass-bg)] backdrop-blur-xl border border-[color:var(--glass-border)] shadow-[var(--glass-shadow)] rounded-[var(--radius-xl)] p-6 inline-block"
      >
        <Counter client:load />
      </div>
    </section>
  </main>
</SiteLayout>
