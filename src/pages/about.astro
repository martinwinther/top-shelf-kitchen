---
import SiteLayout from '../layouts/SiteLayout.astro';
import GlassCard from '../components/ui/GlassCard.astro';
import Button from '../components/ui/Button.astro';
import Badge from '../components/ui/Badge.astro';
import Toggle from '../components/ui/Toggle.astro';
import Modal from '../components/ui/Modal.astro';
import { siteConfig } from '../config/site';
---

<SiteLayout title="About">
  <div class="page-content">
    <header class="page-header">
      <h1>About</h1>
      <p class="subtitle">The story behind {siteConfig.site.name}</p>
    </header>

    <section class="section">
      <GlassCard>
        <div class="card-content">
          <h2>Why This Exists</h2>
          <p>
            Most recipe sites are cluttered with ads, life stories, and SEO filler. 
            We believe recipes should be direct, beautiful, and usable in the kitchen.
          </p>
        </div>
      </GlassCard>
    </section>

    <section class="section">
      <GlassCard>
        <div class="card-content">
          <h2>The Philosophy</h2>
          <ul class="philosophy-list">
            <li><strong>Minimalist</strong> — No life story, no fluff</li>
            <li><strong>Curated</strong> — Quality over quantity</li>
            <li><strong>Fast</strong> — Minimal JavaScript, maximum speed</li>
            <li><strong>Kitchen-ready</strong> — Big type, strong contrast, cooking mode</li>
          </ul>
        </div>
      </GlassCard>
    </section>

    <section class="section">
      <h2 class="demo-title">UI Components</h2>
      <GlassCard>
        <div class="demo-content">
          <div class="demo-group">
            <h3>Buttons</h3>
            <div class="demo-buttons">
              <Button variant="primary">Primary</Button>
              <Button variant="secondary">Secondary</Button>
              <Button variant="ghost">Ghost</Button>
            </div>
          </div>

          <div class="demo-group">
            <h3>Badges</h3>
            <div class="demo-badges">
              <Badge tone="neutral">Neutral</Badge>
              <Badge tone="accent">Accent</Badge>
              <Badge tone="muted">Muted</Badge>
            </div>
          </div>

          <div class="demo-group">
            <h3>Toggle</h3>
            <Toggle id="demo-toggle" label="Enable notifications" />
          </div>

          <div class="demo-group">
            <h3>Modal</h3>
            <Button variant="primary" data-modal-open="philosophy-modal">
              View Philosophy
            </Button>
          </div>
        </div>
      </GlassCard>
    </section>
  </div>

  <Modal id="philosophy-modal" title="Our Philosophy">
    <Fragment slot="content">
      <p>No filler. Just keepers.</p>
      <p>
        Every recipe on this site has been tested, refined, and chosen because it delivers.
        No SEO fluff, no life stories—just recipes that work.
      </p>
    </Fragment>
    <Fragment slot="footer">
      <Button variant="ghost" data-modal-close>Close</Button>
    </Fragment>
  </Modal>
</SiteLayout>

<style>
  .page-content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    max-width: 640px;
    margin: 0 auto;
  }

  .page-header {
    padding: 1rem 0 0.5rem;
  }

  .subtitle {
    color: var(--muted);
    font-size: 1.125rem;
    margin-top: 0.5rem;
  }

  .section {
    width: 100%;
  }

  .card-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .card-content h2 {
    font-size: 1.25rem;
    color: var(--text);
  }

  .card-content p {
    color: var(--muted);
    line-height: 1.7;
  }

  .philosophy-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .philosophy-list li {
    color: var(--muted);
    line-height: 1.5;
  }

  .philosophy-list strong {
    color: var(--accent);
  }

  .demo-title {
    font-size: 0.875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--muted);
    margin-bottom: 1rem;
  }

  .demo-content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .demo-group {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .demo-group h3 {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--muted);
    margin: 0;
  }

  .demo-buttons,
  .demo-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }
</style>
