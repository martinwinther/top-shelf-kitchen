---
/**
 * SearchButton - Pill-shaped search button that opens the search modal
 * 
 * Shows a search icon and OS-aware keyboard shortcut hint.
 * Displays ⌘K on macOS, Ctrl K on Windows/Linux.
 * Only renders when search is enabled in siteConfig.
 */

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<button
  type="button"
  class:list={['search-pill', className]}
  aria-label="Search recipes"
  data-search-trigger
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="16"
    height="16"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    aria-hidden="true"
  >
    <circle cx="11" cy="11" r="8"></circle>
    <path d="m21 21-4.3-4.3"></path>
  </svg>
  <span class="search-shortcut" aria-hidden="true">
    <span class="shortcut-key" data-shortcut-key></span>
  </span>
</button>

<script>
  // Detect OS and update keyboard shortcut display
  (function() {
    const isMac = typeof navigator !== 'undefined' && 
      (navigator.platform?.toLowerCase().includes('mac') || 
       navigator.userAgent?.toLowerCase().includes('mac'));
    
    const shortcutText = isMac ? '⌘K' : 'Ctrl K';
    const ariaLabel = isMac ? 'Search recipes (⌘K)' : 'Search recipes (Ctrl+K)';
    
    // Update all shortcut displays
    document.querySelectorAll('[data-shortcut-key]').forEach(el => {
      el.textContent = shortcutText;
    });
    
    // Update aria-labels
    document.querySelectorAll('[data-search-trigger]').forEach(el => {
      el.setAttribute('aria-label', ariaLabel);
    });
  })();
</script>

<style>
  .search-pill {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.75rem;
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: 9999px;
    color: var(--muted);
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.15s ease;
  }

  .search-pill:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.18);
    color: var(--text);
  }

  .search-pill:focus-visible {
    outline: 2px solid var(--accent);
    outline-offset: 2px;
  }

  .search-pill:active {
    transform: scale(0.98);
  }

  .search-shortcut {
    display: flex;
    align-items: center;
    font-size: 0.7rem;
    padding: 0.15rem 0.4rem;
    border-radius: 0.25rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid var(--glass-border);
    color: var(--muted);
    font-family: system-ui, sans-serif;
  }

  @media (max-width: 480px) {
    .search-shortcut {
      display: none;
    }
  }
</style>



