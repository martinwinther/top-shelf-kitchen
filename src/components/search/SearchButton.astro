---
/**
 * SearchButton - Ghost button that opens the search modal
 * 
 * Shows a search icon and keyboard shortcut hint.
 * Only renders when search is enabled in siteConfig.
 */

import { buttonClasses, cx } from '../ui/classes';

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<button
  type="button"
  class={cx(buttonClasses({ variant: 'ghost', size: 'sm' }), 'search-trigger', className)}
  aria-label="Search recipes (⌘K)"
  data-search-trigger
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="18"
    height="18"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    aria-hidden="true"
  >
    <circle cx="11" cy="11" r="8"></circle>
    <path d="m21 21-4.3-4.3"></path>
  </svg>
  <span class="search-shortcut" aria-hidden="true">⌘K</span>
</button>

<style>
  .search-trigger {
    gap: 0.5rem;
  }

  .search-shortcut {
    font-size: 0.7rem;
    padding: 0.15rem 0.4rem;
    border-radius: 0.25rem;
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    color: var(--muted);
    font-family: system-ui, sans-serif;
  }

  @media (max-width: 480px) {
    .search-shortcut {
      display: none;
    }
  }
</style>



