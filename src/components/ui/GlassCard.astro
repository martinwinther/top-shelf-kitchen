---
/**
 * GlassCard - Heavy glass surface component
 * 
 * Uses the Liquid Glass design tokens for a dark, translucent card aesthetic.
 * 
 * @example
 * <GlassCard>Content here</GlassCard>
 * <GlassCard hover>Interactive card with hover effect</GlassCard>
 * <GlassCard as="section" class="p-8">Custom element and classes</GlassCard>
 */

interface Props {
  /** HTML element to render (default: div) */
  as?: keyof HTMLElementTagNameMap;
  /** Additional CSS classes */
  class?: string;
  /** Enable hover lift/glow effect */
  hover?: boolean;
}

const { as: Element = 'div', class: className = '', hover = false } = Astro.props;

const baseClasses = [
  'glass-card',
  hover && 'glass-card--hover',
  className,
].filter(Boolean).join(' ');
---

<Element class={baseClasses}>
  <slot />
</Element>

<style>
  .glass-card {
    background: var(--glass-bg);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-xl);
    box-shadow: var(--glass-shadow);
    padding: 1.5rem;
  }

  .glass-card--hover {
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease,
      border-color 0.2s ease;
  }

  .glass-card--hover:hover {
    transform: translateY(-2px);
    box-shadow:
      var(--glass-shadow),
      0 0 20px rgba(255, 107, 53, 0.1);
    border-color: rgba(255, 255, 255, 0.18);
  }

  @media (prefers-reduced-motion: reduce) {
    .glass-card--hover {
      transition: none;
    }
    .glass-card--hover:hover {
      transform: none;
    }
  }
</style>


