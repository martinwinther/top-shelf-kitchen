---
/**
 * RecipeHero - Hero section for recipe detail pages
 */

import GlassCard from '../ui/GlassCard.astro';
import Badge from '../ui/Badge.astro';

type ImageData =
  | string
  | {
      src: string;
      alt?: string;
      width?: number;
      height?: number;
    }
  | undefined;

interface Props {
  title: string;
  description: string;
  category: string;
  cuisine: string;
  prepMinutes: number;
  cookMinutes: number;
  servingsDefault: number;
  image?: ImageData;
  imageAlt?: string;
}

const {
  title,
  description,
  category,
  cuisine,
  prepMinutes,
  cookMinutes,
  servingsDefault,
  image,
  imageAlt,
} = Astro.props;

const totalMinutes = prepMinutes + cookMinutes;

const formatCategory = (cat: string): string => {
  return cat.charAt(0).toUpperCase() + cat.slice(1);
};

// Normalize image data to object format
const normalizeImage = (
  image: ImageData,
  fallbackAlt?: string
): { src: string; alt: string; width?: number; height?: number } | null => {
  if (!image) return null;

  if (typeof image === 'string') {
    return {
      src: image,
      alt: fallbackAlt || title,
    };
  }

  return {
    src: image.src,
    alt: image.alt || fallbackAlt || title,
    width: image.width,
    height: image.height,
  };
};

const normalizedImage = normalizeImage(image, imageAlt);
---

<header class="recipe-hero">
  {normalizedImage && (
    <div class="recipe-hero-image">
      <img 
        src={normalizedImage.src} 
        alt={normalizedImage.alt}
        width={normalizedImage.width}
        height={normalizedImage.height}
        loading="lazy"
        decoding="async"
        style={normalizedImage.width && normalizedImage.height ? 'height: auto;' : undefined}
      />
    </div>
  )}

  <div class="recipe-hero-content">
    <div class="recipe-hero-badges">
      <Badge tone="neutral">{formatCategory(category)}</Badge>
      <Badge tone="muted">{cuisine}</Badge>
    </div>

    <h1 class="recipe-hero-title">{title}</h1>
    <p class="recipe-hero-description">{description}</p>

    <GlassCard>
      <div class="recipe-hero-meta">
        <div class="meta-item">
          <span class="meta-label">Prep</span>
          <span class="meta-value">{prepMinutes}m</span>
        </div>
        <div class="meta-item">
          <span class="meta-label">Cook</span>
          <span class="meta-value">{cookMinutes}m</span>
        </div>
        <div class="meta-item">
          <span class="meta-label">Total</span>
          <span class="meta-value">{totalMinutes}m</span>
        </div>
        <div class="meta-item">
          <span class="meta-label">Serves</span>
          <span class="meta-value">{servingsDefault}</span>
        </div>
      </div>
    </GlassCard>
  </div>
</header>

<style>
  .recipe-hero {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .recipe-hero-image {
    width: 100%;
    border-radius: var(--radius-xl);
    overflow: hidden;
  }

  .recipe-hero-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .recipe-hero-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .recipe-hero-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .recipe-hero-title {
    font-size: 2rem;
    font-weight: 600;
    line-height: 1.2;
    margin: 0;
    color: var(--text);
  }

  .recipe-hero-description {
    font-size: 1.125rem;
    line-height: 1.6;
    color: var(--muted);
    margin: 0;
  }

  .recipe-hero-meta {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    gap: 1rem;
    text-align: center;
  }

  .meta-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    flex: 1 1 auto;
    min-width: 80px;
  }

  .meta-label {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--muted);
    font-weight: 500;
  }

  .meta-value {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--text);
  }

  @media (min-width: 768px) {
    .recipe-hero-title {
      font-size: 2.5rem;
    }
  }
</style>



